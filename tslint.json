{
  "$schema": "https://json.schemastore.org/tslint",
  "extends": [
    "tslint-angular",
    "@n4bb12/config-tslint"
  ],
  "rules": {
    "angular-whitespace": false,
    "jsdoc-format": false,
    "max-line-length": [
      true,
      120
    ],
    "member-ordering": false,
    "no-non-null-assertion": false,
    "ter-indent": [
      true,
      2
    ],
    "variable-name": false
  },
  "rulesDirectory": [
    "node_modules/codelyzer",
    "node_modules/tslint-eslint-rules/dist/rules"
  ]
}
